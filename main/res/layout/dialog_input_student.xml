<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/labal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/mikhak_black"
        android:text="افزودن دانش اموز"
        android:textColor="#2C3440"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/mikhak_black"
        android:text="لطفا اطلاعات دانش اموز خود را وارد کنید"
        android:textColor="#2C3440"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labal"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/mikhak_black"
        android:text="نام"
        android:textColor="#2C3440"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/st_name"
        android:layout_width="0dp"
        android:layout_height="42sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dialog_input_bg"
        android:ems="10"
        android:fontFamily="@font/mikhak_medium"
        android:hint="علیرضا"
        android:inputType="textPersonName"
        android:paddingRight="7sp"
        android:textColor="#2C3440"
        android:textColorHint="#73859C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/mikhak_black"
        android:text="نام خانوادگی"
        android:textColor="#2C3440"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/st_name"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/st_family"
        android:layout_width="0dp"
        android:layout_height="42sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dialog_input_bg"
        android:ems="10"
        android:fontFamily="@font/mikhak_medium"
        android:hint="فرقدانی"
        android:inputType="textPersonName"
        android:paddingRight="7sp"
        android:textColor="#2C3440"
        android:textColorHint="#73859C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/Des"
        android:layout_width="0dp"
        android:layout_height="82sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dialog_input_bg"
        android:ems="10"
        android:fontFamily="@font/mikhak_medium"
        android:hint="یاداش برای دانش اموز این متن قابل ویرایش و می توانید ان را خالی بگذارید"
        android:inputType="textMultiLine"
        android:paddingRight="7sp"
        android:textColor="#2C3440"
        android:textColorHint="#73859C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/mikhak_black"
        android:text="یاداش"
        android:textColor="#2C3440"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/st_family"
        android:layout_marginRight="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/custom_buttom_negetiv"
        android:fontFamily="@font/mikhak_black"
        android:text="لغو"
        android:textColor="#F6FBFF"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Des"
        android:layout_marginLeft="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/custom_buttom"
        android:fontFamily="@font/mikhak_black"
        android:text="تایید"
        android:textColor="#F6FBFF"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/Des" />
</androidx.constraintlayout.widget.ConstraintLayout>